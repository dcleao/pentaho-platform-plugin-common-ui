{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["package-res/resources/web/pentaho"],
    "exclude": [
      "package-res/resources/web/pentaho/visual",
      "package-res/resources/web/pentaho/data",
      "package-res/resources/web/pentaho/component"],
    "includePattern": ".+\\.js(doc)?$"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": false,
    "default": {
      "useLongnameInNav": true,
      "outputSourceFiles": true,
      "includeDate": true,
      "layoutFile": "../build-res/jsdoc-template/layout.tmpl",
      "staticFiles": {
        "include": [
          "build-res/jsdoc-template/static"
        ]
      }
    }
  },
  "opts": {
    "template": "templates/default",
    "encoding": "utf8",
    "destination": "doc-js/vizapi",
    "recurse": true,
    "private": true,
    "verbose": true
  }
}
